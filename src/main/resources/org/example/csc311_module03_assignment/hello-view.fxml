<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.csc311_module03_assignment.Card24Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Card 24 Game" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="10">
        <ImageView fx:id="card1Image" fitWidth="80" fitHeight="120"/>
        <ImageView fx:id="card2Image" fitWidth="80" fitHeight="120"/>
        <ImageView fx:id="card3Image" fitWidth="80" fitHeight="120"/>
        <ImageView fx:id="card4Image" fitWidth="80" fitHeight="120"/>
    </HBox>

    <TextField fx:id="expressionField" promptText="Enter expression"/>

    <HBox spacing="10">
        <Button text="Verify" onAction="#verifyExpression"/>
        <Button text="Refresh" onAction="#generateNewCards"/>
    </HBox>
</VBox>
